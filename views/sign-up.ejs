<div id="back-form">
    <div id="result"> Write your details below: </div>
    <div id="form">
        <div class="txt-input" id="email" onclick="remove(this)" >  
            <div class="txt-label"> Email Address </div>
            <div id="email-txt" class="txt" onblur="addIfNotEmpyt(this)"></div>
        </div>
        <div class="txt-input" id="name" onclick="remove(this)">
            <div class="txt-label"> Name </div>
            <div id="name-txt" class="txt" onblur="addIfNotEmpyt(this)"></div>
        </div>
        <div class="txt-input" id="password" onclick="remove(this)">
            <div class="txt-label"> Password </div>
            <div id="password-txt" class="txt" onblur="addIfNotEmpyt(this)" onchange="hidePassword()"></div>
        </div>
        <div class="button" onclick="validation('sign-up')"> Sign Up </div>
        <%- include('google-sign-in') %> 
        <div   id="form-hr" ></div>
        <div   id="form-1-6"> New here ?</div>
        <div class="button" onclick="redirect('log-in')"> Log In </div>
    </div>
</div>


